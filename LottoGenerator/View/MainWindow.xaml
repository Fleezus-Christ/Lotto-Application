<Window x:Class="LottoGenerator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottoGenerator"
        xmlns:view="clr-namespace:LottoGenerator.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Lotto Generator" Width="600" Height="400">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <!--<Image Source="/WpfTutorialSamples;component/Images/bullet_blue.png" />-->
                            <TextBlock Text="EuroMillions" Foreground="Goldenrod" />
                        </StackPanel>
                    </TabItem.Header>
                    <view:EuromillionsView />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <!--<Image Source="/WpfTutorialSamples;component/Images/bullet_red.png" />-->
                            <TextBlock Text="Lotto" Foreground="Red" />
                        </StackPanel>
                    </TabItem.Header>
                    <view:LottoView />
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <!--<Image Source="/WpfTutorialSamples;component/Images/bullet_green.png" />-->
                            <TextBlock Text="ThunderBall" Foreground="Purple" />
                        </StackPanel>
                    </TabItem.Header>
                    <view:LottoView />
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
